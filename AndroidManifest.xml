<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.sorayavay.listado"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name="es.sorayavay.listado.MenuActivity"
            android:label="@string/title_activity_menu"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="es.sorayavay.listado.GaleriaActivity"
            android:label="@string/title_activity_galeria"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="es.sorayavay.listado.InfoActivity"
            android:label="@string/title_activity_info" >
        </activity>
    </application>

</manifest>